<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back2"
    android:orientation="vertical" >

<com.google.ads.AdView
    android:id="@+id/adView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_toEndOf="@id/Back"
    app:adSize="BANNER"
    android:visibility="invisible"
    app:adUnitId="a151786603974bf"
    app:loadAdOnCreate="true" >

    </com.google.ads.AdView>

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:layout_alignLeft="@+id/editPetition"
    android:layout_below="@+id/editPetition"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="60dp"
    android:src="@drawable/quest_b" />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:layout_alignLeft="@+id/imageView2"
    android:layout_alignParentTop="true"
    android:layout_marginTop="93dp"
    android:src="@drawable/pet_b" />

<EditText
    android:id="@+id/editQuestion"
    android:layout_width="320dp"
    android:layout_height="45dp"
    android:layout_alignLeft="@+id/imageView2"
    android:layout_below="@+id/imageView2"
    android:layout_marginTop="23dp"
    android:background="@drawable/input_b"
    android:ems="10"
    android:singleLine="true"
    android:textColorLink="#ffffff" />

<EditText
    android:id="@+id/editPetition"
    android:layout_width="280dp"
    android:layout_height="45dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/imageView1"
    android:layout_marginLeft="54dp"
    android:layout_marginTop="23dp"
    android:background="@drawable/input_b"
    android:ems="10"
    android:textColorLink="#ffffff" >

    <requestFocus />
</EditText>

<Button
    android:id="@+id/btnAnswer"
    android:layout_width="220dp"
    android:layout_height="60dp"
    android:layout_alignParentStart="false"
    android:layout_alignRight="@+id/editQuestion"
    android:layout_below="@+id/editQuestion"
    android:layout_marginTop="86dp"
    android:background="@drawable/carabela" />

<Button
    android:id="@+id/btnReset"
    android:layout_width="220dp"
    android:layout_height="75dp"
    android:layout_alignLeft="@+id/btnAnswer"
    android:layout_alignParentEnd="false"
    android:layout_alignParentStart="false"
    android:layout_below="@+id/btnAnswer"
    android:layout_marginLeft="47dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/reset_c" />

</RelativeLayout>
