<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/backl"
    android:contentDescription="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnContinue"
        android:layout_alignLeft="@+id/btnContinue"
        android:layout_marginBottom="14dp"
        android:text="@string/Text1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="10dp"
        android:background="@drawable/cont" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/btnContinue"
        android:layout_alignBottom="@+id/btnContinue"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/us" />

</RelativeLayout>