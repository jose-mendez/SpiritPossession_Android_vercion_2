<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back2"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/editQuestion"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/input_b"
        android:ems="10"
        android:singleLine="true"
        android:textColorLink="#ffffff" />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="50dp"
    android:src="@drawable/pet_b" />

<EditText
    android:id="@+id/editPetition"
    android:layout_width="230dp"
    android:layout_height="45dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/imageView1"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="13dp"
    android:background="@drawable/input_b"
    android:ems="10"
    android:textColorLink="#ffffff" >

    <requestFocus />
</EditText>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="180dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/btnAnswer"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/reset_c" />

<com.google.ads.AdView
    android:id="@+id/adView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_toEndOf="@id/Back"
    android:visibility="invisible"
    app:adSize="BANNER"
    app:adUnitId="a151786603974bf"
    app:loadAdOnCreate="true" >

    </com.google.ads.AdView>

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:layout_alignLeft="@+id/editQuestion"
    android:layout_below="@+id/editPetition"
    android:layout_marginTop="30dp"
    android:src="@drawable/quest_b" />

<Button
    android:id="@+id/btnAnswer"
    android:layout_width="180dp"
    android:layout_height="50dp"
    android:layout_alignParentStart="false"
    android:layout_alignRight="@+id/editQuestion"
    android:layout_below="@+id/editQuestion"
    android:layout_marginTop="34dp"
    android:background="@drawable/carabela" />

</RelativeLayout>
